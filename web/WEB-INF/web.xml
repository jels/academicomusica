<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionServlet</servlet-name>
        <servlet-class>Servlets.ActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarMateria</servlet-name>
        <servlet-class>Servlets.RegistrarMateria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarPersona</servlet-name>
        <servlet-class>Servlets.RegistrarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarDocente</servlet-name>
        <servlet-class>Servlets.RegistrarDocente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionServlet</servlet-name>
        <url-pattern>/ActionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarMateria</servlet-name>
        <url-pattern>/reg-mat.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarPersona</servlet-name>
        <url-pattern>/reg-persona.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarDocente</servlet-name>
        <url-pattern>/reg-doc.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
